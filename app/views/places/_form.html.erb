<%= render "layouts/errors", :object => @place %>

<div>
  <%= form_for [@place], remote: true do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :street_address %>
    <%= f.text_field :street_address %>

    <%= f.label :city %>
    <%= f.text_field :city %>

    <%= f.label :state %>
    <%= f.text_field :state %>

    <%= f.submit :class => "btn btn-submit" %>
  <% end %>
</div>
